                "exec": [
                  "// Test 1: Verify response status is 200",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test 2: Verify response has expected structure",
                  "pm.test(\"Response has expected structure (success, message, data, errors)\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property(\"success\");",
                  "    pm.expect(jsonData).to.have.property(\"message\");",
                  "    pm.expect(jsonData).to.have.property(\"data\");",
                  "    pm.expect(jsonData).to.have.property(\"errors\");",
                  "});",
                  "",
                  "// Test 3: Verify success is true",
                  "pm.test(\"Success field is true\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "// Test 4: Verify data is an array",
                  "pm.test(\"Data field is an array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an(\"array\");",
                  "});",
                  "",
                  "// Test 5: Verify each task has correct fields with correct types",
                  "pm.test(\"Each task has id, title, isDone, and createdAtUtc with correct types\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.data.forEach(function (task, index) {",
                  "        pm.expect(task).to.have.property(\"id\").that.is.a(\"string\");",
                  "        pm.expect(task).to.have.property(\"title\").that.is.a(\"string\");",
                  "        pm.expect(task).to.have.property(\"isDone\").that.is.a(\"boolean\");",
                  "        pm.expect(task).to.have.property(\"createdAtUtc\").that.is.a(\"string\");",
                  "    });",
                  "});",
                  "",
                  "// Test 6: Verify response time is reasonable (under 2000ms)",
                  "pm.test(\"Response time is under 2000ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
