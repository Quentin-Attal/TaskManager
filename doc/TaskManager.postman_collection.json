                  "}",
                  "",
                  "pm.test('Response has required fields', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData).to.have.property('success');",
                  "  pm.expect(jsonData).to.have.property('message');",
                  "  pm.expect(jsonData).to.have.property('data');",
                  "  pm.expect(jsonData).to.have.property('errors');",
                  "});",
                  "",
                  "pm.test('Success field is true', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "pm.test('Data object contains accessToken and expirationDate', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data).to.have.property('accessToken');",
                  "  pm.expect(jsonData.data).to.have.property('expirationDate');",
                  "});",
                  "",
                  "pm.test('AccessToken is a non-empty string', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data.accessToken).to.be.a('string');",
                  "  pm.expect(jsonData.data.accessToken).to.not.be.empty;",
                  "});",
                  "",
                  "pm.test('ExpirationDate is a valid date string', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data.expirationDate).to.be.a('string');",
                  "  pm.expect(new Date(jsonData.data.expirationDate)).to.be.instanceof(Date);",
                  "});",
                  "",
                  "pm.test('Errors field is null', () => {",
                  "  const jsonData = pm.response.json();",
                  "  pm.expect(jsonData.errors).to.be.null;",
                  "});"
